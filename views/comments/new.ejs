<% include ../partials/header %> 

<div class="container">
	<div class="row">
		<div class="forms">
			<h1 class="form-head-h1">Add a new Comment</h1>
			<form method="post" action="/campgrounds/<%= campground._id %>/comments">
				<div class="form-group">
					<textarea class="form-control" placeholder="Comment" name="comment[text]"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-success btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>
	</div>
</div>

