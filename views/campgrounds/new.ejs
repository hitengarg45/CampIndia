<!-- include header template -->
<% include ../partials/header %> 

<div class="container">
	<div class="row">
		<div class="forms">
			<h1 class="form-head-h1">Create a new Campground</h1>
			<form method="post" action="/campgrounds">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="New Campground" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image URL" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price" name="price" min="100" step="1">
				</div>
				<div class="form-group">
    				<input class="form-control" type="text" name="location" id="location" placeholder="Ex. Western Ladakh Camp, Leh">
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Description" name="description"></textarea>
					<!-- <textarea class="form-control" placeholder="Description" name="description"></textarea> -->
				</div>
				<div class="form-group">
					<button class="btn btn-success btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back!</a>
		</div>
	</div>
</div>

<!-- include footer template -->
<% include ../partials/footer %>